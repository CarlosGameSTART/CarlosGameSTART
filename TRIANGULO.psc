Algoritmo trangulo
	Definir Area , Lado1, Lado2, Lado3, Suma, L1, L2, L3, S Como Real;
	Escribir "Lado1";
	Leer L1;
	Escribir "Lado2";
	Leer L2;
	Escribir "Lado3";
	Leer L3;
	S= (L1+L2+L3)/2;
	Area = raiz(S*(S-L1)*(S-L2)*(S-L3));
	Escribir "Area: ", Area;
	Escribir "Suma: ", S;
	Escribir "Carlos Albero Cortinas";
FinAlgoritmo
